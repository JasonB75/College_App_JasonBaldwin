<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mSubmistButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/guardianTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="FamilyMemberContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guardianfirstNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="First"
        app:layout_constraintEnd_toEndOf="@+id/guardianTextView"
        app:layout_constraintStart_toStartOf="@+id/guardianTextView"
        app:layout_constraintTop_toBottomOf="@+id/guardianTextView" />

    <TextView
        android:id="@+id/guardianlastNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="110dp" />

    <EditText
        android:id="@+id/guardianFirstEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/guardianfirstNameView"
        app:layout_constraintTop_toBottomOf="@+id/guardianTextView" />

    <EditText
        android:id="@+id/guardianLastEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/guardianlastNameView"
        app:layout_constraintTop_toBottomOf="@+id/guardianFirstEdit" />

    <Button
        android:id="@+id/guardianSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guardianoccupationedit" />

    <TextView
        android:id="@+id/guardian_ocupation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/guardianOcupationText"
        app:layout_constraintEnd_toEndOf="@+id/guardianTextView"
        app:layout_constraintStart_toStartOf="@+id/guardianTextView"
        app:layout_constraintTop_toBottomOf="@+id/guardianlastNameView" />

    <EditText
        android:id="@+id/guardianoccupationedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        app:layout_constraintStart_toEndOf="@+id/guardian_ocupation_view"
        app:layout_constraintTop_toBottomOf="@+id/guardianLastEdit" />


</android.support.constraint.ConstraintLayout>